<h1>Books</h1>
<table>
 <thead>
  <tr>
   <% @books.each do |book| %>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   
   <td><%= link_to 'edit', edit_book_path(book.id) %></td>
   <td><%= link_to 'destroy', destroy_book_path(book.id),method: :delete %></td>
  </tr>
 </tbody>
</table>
<% end %>

h1>New Book</h1>
<%=form_with model:@book, local:true do |f|%>
  <h4>Title</h4>
  <%=f.text_field :title%>
  <h4>Opinion</h4>
  <%=f.text_area :body %>
  <%=f.submit'Create Book'%>
<% end %>
