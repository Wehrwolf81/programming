<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
        <div>
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
          <p>name：<%= @user.name %></p>
          <p>introduction：<%= @user.introduction %></p>
          <button type="button" class="btn btn-outline-secondary btn-block">
            <div class="fas fa-user-cog">
              <%= link_to 'Edit', edit_user_path(@user) %>
            </div>
          </button>
        </div>
    </div>
    <div class="col-lg-8">
        <h2>Users</h2>
    <table class="table table-striped">
      <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(@user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 </div>
</div>


<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>件のerrorが発生しました
  <% @new_book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>New book</h1>
<%= form_with model: @new_book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
