
<p id="notice"><%= notice %></p>

<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>件のerrorが発生しました
  <% @new_book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
        <div>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <p>name：<%= current_user.name %></p>
          <p>introduction：<%= current_user.introduction %></p>
          <button type="button" class="btn btn-outline-secondary btn-block">
            <div class="fas fa-user-cog">
              <%= link_to 'Edit', edit_user_path(current_user) %>
            </div>
          </button>
        </div>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
    <table class="table table-striped">
      <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @book, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= link_to 'book.title', book_path(book.id) %></td>
          <td><%= book.body %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 </div>
</div>






<h1>New book</h1>
<%= form_with model: @new_book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>